# Testing Environment Configuration
# Configuration optimized for running tests and examples

# =============================================================================
# TESTING SETTINGS
# =============================================================================

# Enable debug mode for detailed test output
DEBUG=true

# Use fast, local embedding models for testing
EMBEDDING__MODEL_TYPE=sentence-transformers
EMBEDDING__MODEL_NAME=all-MiniLM-L6-v2
EMBEDDING__BATCH_SIZE=8

# Small chunk sizes for faster test execution
TEXT_PROCESSING__CHUNK_SIZE=500
TEXT_PROCESSING__CHUNK_OVERLAP=50
TEXT_PROCESSING__MIN_CHUNK_SIZE=50

# Test-specific ChromaDB configuration
CHROMA_DB__PERSIST_DIRECTORY=./test_chroma_db
CHROMA_DB__COLLECTION_NAME=test_documents

# Minimal PDF processing limits for testing
PDF__MAX_FILE_SIZE_MB=10
PDF__TIMEOUT_SECONDS=60

# Test logging configuration
LOGGING__LEVEL=INFO
LOGGING__FILE_PATH=./logs/test_pdf_vector_system.log

# Minimal workers for testing
MAX_WORKERS=1

# Test-specific paths
SAMPLE_DATA_DIR=./examples/sample_data
EXAMPLE_OUTPUT_DIR=./test_outputs

# Create sample data if missing
CREATE_SAMPLE_DATA=true

# =============================================================================
# TEST API KEYS (optional, for integration testing)
# =============================================================================

# Set these only if you want to test cloud providers
# Use test/development keys, never production keys
# OPENAI_API_KEY=your_test_openai_key
# COHERE_API_KEY=your_test_cohere_key
# GOOGLE_GEMINI_API_KEY=your_test_gemini_key
