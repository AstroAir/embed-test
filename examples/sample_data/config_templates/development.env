# Development Environment Configuration
# Copy to .env for development use

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Enable debug mode for detailed logging
DEBUG=true

# Use local embedding models for development
EMBEDDING__MODEL_TYPE=sentence-transformers
EMBEDDING__MODEL_NAME=all-MiniLM-L6-v2
EMBEDDING__BATCH_SIZE=16

# Smaller chunk sizes for faster processing during development
TEXT_PROCESSING__CHUNK_SIZE=800
TEXT_PROCESSING__CHUNK_OVERLAP=100

# Local ChromaDB for development
CHROMA_DB__PERSIST_DIRECTORY=./dev_chroma_db
CHROMA_DB__COLLECTION_NAME=dev_documents

# Verbose logging for development
LOGGING__LEVEL=DEBUG
LOGGING__FILE_PATH=./logs/dev_pdf_vector_system.log

# Reduced workers for development
MAX_WORKERS=2

# Development-specific paths
SAMPLE_DATA_DIR=./examples/sample_data
EXAMPLE_OUTPUT_DIR=./dev_outputs

# =============================================================================
# OPTIONAL API KEYS (for testing cloud providers)
# =============================================================================

# Uncomment and set these for testing cloud providers
# OPENAI_API_KEY=your_dev_openai_key
# COHERE_API_KEY=your_dev_cohere_key
# GOOGLE_GEMINI_API_KEY=your_dev_gemini_key
