# PDF Vector System Examples Configuration
# Copy this file to .env and adjust the values as needed

# =============================================================================
# EMBEDDING CONFIGURATION
# =============================================================================

# Embedding model type (sentence-transformers, openai, cohere, huggingface, google_use, google_gemini)
EMBEDDING__MODEL_TYPE=sentence-transformers

# Model name (depends on the provider)
EMBEDDING__MODEL_NAME=all-MiniLM-L6-v2

# Batch size for embedding generation
EMBEDDING__BATCH_SIZE=32

# Maximum retries for failed requests
EMBEDDING__MAX_RETRIES=3

# Timeout for embedding requests (seconds)
EMBEDDING__TIMEOUT_SECONDS=60

# =============================================================================
# API KEYS (Required for cloud providers)
# =============================================================================

# OpenAI API Key (for OpenAI embeddings)
# OPENAI_API_KEY=your_openai_api_key_here

# Cohere API Key (for Cohere embeddings)
# COHERE_API_KEY=your_cohere_api_key_here

# Google Gemini API Key (for Gemini embeddings)
# GOOGLE_GEMINI_API_KEY=your_gemini_api_key_here

# Google Cloud Project (for Vertex AI)
# GOOGLE_CLOUD_PROJECT=your_project_id

# Google Application Credentials (for Vertex AI)
# GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json

# =============================================================================
# CHROMADB CONFIGURATION
# =============================================================================

# Directory for ChromaDB persistence
CHROMA_DB__PERSIST_DIRECTORY=./example_chroma_db

# Collection name
CHROMA_DB__COLLECTION_NAME=example_documents

# Distance metric (cosine, l2, ip)
CHROMA_DB__DISTANCE_METRIC=cosine

# Maximum results to return
CHROMA_DB__MAX_RESULTS=10

# =============================================================================
# PDF PROCESSING CONFIGURATION
# =============================================================================

# Maximum PDF file size in MB
PDF__MAX_FILE_SIZE_MB=100

# PDF processing timeout in seconds
PDF__TIMEOUT_SECONDS=300

# Whether to extract images from PDFs
PDF__EXTRACT_IMAGES=false

# =============================================================================
# TEXT PROCESSING CONFIGURATION
# =============================================================================

# Text chunk size in characters
TEXT_PROCESSING__CHUNK_SIZE=1000

# Overlap between chunks in characters
TEXT_PROCESSING__CHUNK_OVERLAP=200

# Minimum chunk size in characters
TEXT_PROCESSING__MIN_CHUNK_SIZE=100

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOGGING__LEVEL=INFO

# Log file path (optional)
LOGGING__FILE_PATH=./logs/pdf_vector_examples.log

# Log file rotation size
LOGGING__ROTATION=10 MB

# Log file retention period
LOGGING__RETENTION=1 week

# =============================================================================
# GLOBAL SETTINGS
# =============================================================================

# Enable debug mode
DEBUG=false

# Maximum number of worker threads
MAX_WORKERS=4

# =============================================================================
# EXAMPLE-SPECIFIC SETTINGS
# =============================================================================

# Directory containing sample PDF files
SAMPLE_DATA_DIR=./examples/sample_data

# Directory for example outputs
EXAMPLE_OUTPUT_DIR=./example_outputs

# Whether to create sample data if missing
CREATE_SAMPLE_DATA=true
